<% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
 
  <%= form_tag do %>
    <fieldset>
      <legend>Please Log In</legend>
 
      <div>
        <label for="name">Name:</label>
        <p><%= text_field_tag :name, params[:name] %></p>
      </div>
 
      <div>
        <label for="password">Password:</label>
       <p> <%= password_field_tag :password, params[:password] %></p>
      </div>
  
      <div>
        <%= submit_tag "Login" %>
      </div>
    </fieldset>
  <% end %>
</div>
